@model Web.ViewModels.BookItems.BookItemDetailsViewModel

@{
    ViewData["Title"] = ViewResource.BookItemDetails;
}

<h1>@ViewResource.Details</h1>

<h4>@ViewResource.BookItem</h4>
<hr />
<div>
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Barcode)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Barcode)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.PublicationDate)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.PublicationDate)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Price)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Price)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.DateOfPurchase)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.DateOfPurchase)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Format)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Format)
        </dd>
        <dt class="col-sm-2">
            @ViewResource.Rack
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.RackNumber)
            @Html.DisplayFor(model => model.LocationIdentifier)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Status)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Status)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.BorrowingDate)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.BorrowingDate)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.DueDate)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.DueDate)
        </dd>
    </dl>
</div>

<hr />

<div>
    <a asp-controller="@nameof(MVC.BookItems)" asp-action="@nameof(MVC.BookItems.Edit)" asp-route-id="@Model.BookItemId">@ViewResource.Edit</a>
    @if (Model.Status != BookStatus.Loaned)
    {
        @:|
        <a asp-controller="@nameof(MVC.BookItems)" asp-action="@nameof(MVC.BookItems.Delete)" asp-route-id="@Model.BookItemId">@ViewResource.Delete</a>
    }
    <br />
    <a asp-controller="@nameof(MVC.Books)" asp-action="@nameof(MVC.Books.Index)">@ViewResource.Books</a> |
    <a asp-controller="@nameof(MVC.BookItems)" asp-action="@nameof(MVC.BookItems.Index)" asp-route-id="@Model.BookId">@ViewResource.BookItems</a>
    @if (Model.HasOtherBookItems == true)
    {
        @:|
        <a asp-controller="@nameof(MVC.BookItems)" asp-action="@nameof(MVC.BookItems.IndexByBook)" asp-route-id="@Model.BookId">@ViewResource.OtherBookItems</a>
    }
    @if (Model.BorrowerId != null)
    {
        @:|
        <a asp-controller="@nameof(MVC.Members)" asp-action="@nameof(MVC.Members.Details)" asp-route-id="@Model.BorrowerId">@ViewResource.BorrowedMember</a>
    }
    @if (Model.ReserverId != null)
    {
        @:|
        <a asp-controller="@nameof(MVC.Members)" asp-action="@nameof(MVC.Members.Details)" asp-route-id="@Model.ReserverId">@ViewResource.ReservedMember</a>
    }
</div>
