                    data: function (params) {
                        var queryParameters = {
                            Query: params.term
                        };
                        return queryParameters;
                    },
                    dataType: "json",
                    cache: true,
                    delay: 250,
                    contentType: "application/json; charset=utf-8",
                    processResults: function (data) {
                        return {
                            results: $.map(data, function (val) {
                                return { id: val.id, text: val.name };
                            }),
                        };
                    }
                }
            })
        });
</script>