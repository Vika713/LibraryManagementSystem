@model Web.ViewModels.Librarians.LibrarianStatusChangeViewModel

@{
    ViewData["Title"] = ViewResource.AccountStatusChange;
}

<h1>@ViewResource.AccountStatusChange</h1>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="@nameof(MVC.Librarians.AccountStatusChange)">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="Code" class="control-label"></label>
                <input asp-for="Code" class="form-control" readonly="@(true)" />
            </div>
            <div class="form-group">
                <label asp-for="CurrentStatus" class="control-label"></label>
                <input asp-for="CurrentStatus" class="form-control" readonly="@(true)" />
            </div>
            <div class="form-group">
                <label asp-for="AccountStatus" class="control-label"></label>
                <select asp-for="AccountStatus" asp-items="Html.GetEnumSelectList<Common.Enumeration.LibrarianStatus>()">
                </select>
                <span asp-validation-for="AccountStatus" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="@ViewResource.Submit" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<hr />

<div>
    <a asp-controller="@nameof(MVC.People)" asp-action="@nameof(MVC.People.Index)">@ViewResource.People</a>
    <a asp-controller="@nameof(MVC.Librarians)" asp-action="@nameof(MVC.Librarians.Details)" asp-route-id="@Model.Id">@ViewResource.LibrarianDetails</a>
</div>
