@model Web.ViewModels.Lending.RenewViewModel
@{
    ViewData["Title"] = ViewResource.Renew;
}

<h1>@ViewResource.Renew</h1>

<div class="row">
    <div class="col-md-4">
        <form asp-action="@nameof(MVC.Lending.Renew)">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="CardBarcode" class="control-label"></label>
                <input asp-for="CardBarcode" class="form-control" />
                <span asp-validation-for="CardBarcode" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="BookBarcode" class="control-label"></label>
                <input asp-for="BookBarcode" class="form-control" />
                <span asp-validation-for="BookBarcode" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="@ViewResource.Renew" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<hr />

<div>
    <a asp-controller="@nameof(MVC.Home)" asp-action="@nameof(MVC.Home.LendingMenu)">@ViewResource.BackToMenu</a>
</div>
