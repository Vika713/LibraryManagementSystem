<script type="text/javascript">
        $("#btnAdd").on('click', function () {
            $.ajax({
                async: true,
                data: $('#form').serialize(),
                type: "POST",
                url: '@Url.Action(nameof(MVC.Books.AddAuthorName), nameof(MVC.Books))',
                success: function (partialView) {
                    $('#authorsNamesContainer').html(partialView);
                }
            });
        });

    $(document).on('click', "#btnRemove", function (event) {
        (event.currentTarget).closest('.row').getElementsByClassName("authorNameInput")[0].setAttribute('value', '')
        $(event.currentTarget).closest('.row').hide();
        });
</script>