@model Web.ViewModels.Books.BookDeleteViewModel

@{
    ViewData["Title"] = ViewResource.DeleteBook;
}

<h1>@ViewResource.Delete</h1>

<h4>@ViewResource.Book</h4>
<hr />
<div>
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ISBN)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ISBN)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Title)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Title)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Subject)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Subject)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Publisher)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Publisher)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Language)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Language)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.NumberOfPages)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.NumberOfPages)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.AuthorsNames)
        </dt>
        <dd class="col-sm-10">
            @if (Model.AuthorsNames != null && Model.AuthorsNames.Any())
            {
                @foreach (var author in Model.AuthorsNames)
                {
                    @Html.DisplayFor(item => author.Name)
                    <br />
                }
            }
        </dd>
    </dl>
</div>

<div>
    <form asp-action="@nameof(MVC.Books.Delete)">
        <input type="hidden" asp-for="ISBN" />
        <input type="hidden" asp-for="Title" />
        <input type="hidden" asp-for="Subject" />
        <input type="hidden" asp-for="Publisher" />
        <input type="hidden" asp-for="Language" />
        <input type="hidden" asp-for="NumberOfPages" />
        <input type="hidden" asp-for="AuthorsNames" />
        <input type="hidden" asp-for="BookId" />
        <span asp-validation-for="BookId" class="text-danger"></span>
        <input type="submit" value="@ViewResource.Delete" class="btn btn-danger" />
    </form>
</div>

<hr />

<div>
    <a asp-action="@nameof(MVC.Books.Index)">@ViewResource.Books</a>
</div>
