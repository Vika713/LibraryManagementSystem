@model Web.ViewModels.Identity.ProfileNavigationViewModel

@{
    ViewData["Title"] = ViewResource.Profile;
}

<h1>@ViewResource.Profile</h1>


<div class="nav-item">
    <a class="nav-link text-dark" asp-area="" asp-controller="@nameof(MVC.People)" asp-action="@nameof(MVC.People.Details)" asp-route-id="@Model.PersonId">@ViewResource.PersonDetails</a>
</div>

@if (Model.MemberId != null)
{
    <div class="nav-item">
        <a class="nav-link text-dark" asp-area="" asp-controller="@nameof(MVC.Members)" asp-action="@nameof(MVC.Members.Details)" asp-route-id="@Model.MemberId">@ViewResource.MemberDetails</a>
    </div>
}

@if (Model.LibrarianId != null)
{
    <div class="nav-item">
        <a class="nav-link text-dark" asp-area="" asp-controller="@nameof(MVC.Librarians)" asp-action="@nameof(MVC.Librarians.Details)" asp-route-id="@Model.LibrarianId">@ViewResource.LibrarianDetails</a>
    </div>
}
